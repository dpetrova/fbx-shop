{{> header-user}}
<div class="container">
    <div class="row">
        <div class="col s6 m4 offset-m4 offset-s3">
            <h3>Checkout</h3>
            <h6>Your Total: ${{total}}</h6>
            <div id="charge-error" class="red-text {{#if noErrors}}hidden{{/if}}">
                {{errorMsg}}
            </div>
            <hr>
            <form action="/checkout" method="post" id="checkout-form">
                <div class="row">
                    <div class="input-field col s12">
                        <label for="name">Name</label>
                        <input type="text" id="name" class="validate" required="" name="name"/>
                    </div>
                    <div class="input-field col s12">
                        <label for="address">Address</label>
                        <input type="text" id="address" class="validate" required="" name="address"/>
                    </div>
                    <div class="input-field col s12">
                        <label for="card-name">Card Holder Name</label>
                        <input type="text" id="card-name" class="validate" required=""/>
                    </div>
                    <div class="input-field col s12">
                        <label for="card-number">Credit Card Number</label>
                        <input type="text" id="card-number" class="validate" required=""/>
                    </div>
                    <div class="col s12">
                        <div class="row">
                            <div class="input-field col s6">
                                <label for="card-expiry-month">Expiration Month</label>
                                <input type="text" id="card-expiry-month" class="validate" required=""/>
                            </div>
                            <div class="input-field col s6">
                                <label for="card-expiry-year">Expiration Year</label>
                                <input type="text" id="card-expiry-year" class="validate" required=""/>
                            </div>
                        </div>
                    </div>
                    <div class="input-field col s12">
                        <label for="card-cvc">CVC</label>
                        <input type="text" id="card-cvc" class="validate" required=""/>
                    </div>
                </div>
                <button type="submit" class="waves-effect waves-light btn">Buy now</button>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
    <script type="text/javascript" src="javascripts/checkout.js"></script>
</div>
